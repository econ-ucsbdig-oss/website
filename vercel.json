{
  "version": 2,
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": [
          "*.html",
          "*.css",
          "*.js",
          "*.csv",
          "*.json",
          "data/**",
          "valuation-models/**",
          "TrackingError/**"
        ]
      }
    }
  ],
  "functions": {
    "server.js": { "maxDuration": 60 }
  },
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "server.js"
    },
    {
      "src": "/(.*)",
      "dest": "server.js"
    }
  ]
}
